{
    "name": "joomla/oauth2",
    "type": "joomla-package",
    "description": "Joomla OAuth2 Package",
    "keywords": ["joomla", "framework", "oauth2"],
    "homepage": "https://github.com/joomla-framework/oauth2",
    "license": "GPL-2.0+",
    "require": {
        "php": ">=5.3.10",
        "joomla/application": "~1.0",
        "joomla/http": "~1.0",
        "joomla/input": "~1.0"
    },
    "require-dev": {
        "joomla/test": "~1.0",
        "phpunit/phpunit": "4.*",
        "squizlabs/php_codesniffer": "1.*"
    },
    "autoload": {
        "psr-4": {
            "Joomla\\OAuth2\\": "src/",
            "Joomla\\OAuth2\\Tests\\": "Tests/"
        }
    }
}
